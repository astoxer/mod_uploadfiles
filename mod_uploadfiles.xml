<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Upload Files</name>
    <author>Toxa S</author>
    <version>1.0.0</version>
    <description>Модуль загрузки файлов.</description>
    <files>
        
        <filename module="mod_uploadfiles">mod_uploadfiles.php</filename>
        <folder>languages</folder>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>mod_uploadfiles.xml</filename>

    </files>
	
    <languages>
		<language tag="en-GB">languages/en-GB.mod_uploadfiles.ini</language>
		<language tag="en-GB">languages/en-GB.mod_uploadfiles.sys.ini</language>
		<language tag="ru-RU">languages/ru-RU.mod_uploadfiles.ini</language>
		<language tag="ru-RU">languages/ru-RU.mod_uploadfiles.sys.ini</language>
	</languages>

    <config>
		<fields name="params">
            
        <fieldset name="basic">
            
            <field name="folder_default" 
            	type="text" 
            	default="/../../images/" 
            	label="MOD_UPLOADFILES_FOLDER" 
            	description="MOD_UPLOADFILES_FOLDER_DESC" />



            <field name="testbtn" type="radio" label="Просто ползунок" default="1" class="btn-group">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
            </field>
                
        </fieldset>
            
        </fields>
    </config>
</extension>